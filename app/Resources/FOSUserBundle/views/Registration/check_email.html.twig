{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'BodyBookPlatformBundle' %}

{% block fos_user_content %}
	<div class="text-center">
		<div class="icon-object border-success text-success"><i class="icon-mail-read"></i></div>
		<h5 class="content-group-lg">{{ 'bb_platform.views.security.register.confirmationMail'|trans }}
			<small class="display-block">{{ 'bb_platform.views.security.register.checkYourInbox'|trans }}</small>
		</h5>
	</div>
	<p class="text-center no-margin-bottom">
		{{ 'registration.check_email'|trans({'%email%': ('<strong>' ~ user.email ~ '</strong>')}, 'FOSUserBundle')|raw }}
	</p>
{% endblock fos_user_content %}
