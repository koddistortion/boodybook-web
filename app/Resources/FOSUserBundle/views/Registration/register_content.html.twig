{% trans_default_domain 'BodyBookPlatformBundle' %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
<div class="text-center">
	<div class="icon-object border-success text-success"><i class="icon-user-plus"></i></div>
	<h5 class="content-group-lg">{{ 'bb_platform.views.security.register.createAccount'|trans }}
		<small class="display-block">{{ 'bb_platform.views.security.register.allFieldsRequired'|trans }}</small>
	</h5>
</div>

<div class="form-group has-feedback {{ form.username.vars.errors|length > 0 ? 'has-error' : '' }}">
	{{ form_widget(form.username) }}
	<div class="form-control-feedback">
		<i class="icon-user-plus text-muted"></i>
	</div>
	{% for error in form.username.vars.errors %}
		<span class="help-block">{{ error.message }}</span>
	{% endfor %}
</div>

<div class="row">
	<div class="col-md-6">
		<div class="form-group has-feedback {{ form.firstName.vars.errors|length > 0 ? 'has-error' : '' }}">
			{{ form_widget(form.firstName) }}
			<div class="form-control-feedback">
				<i class="icon-user-check text-muted"></i>
			</div>
			{% for error in form.firstName.vars.errors %}
				<span class="help-block">{{ error.message }}</span>
			{% endfor %}
		</div>
	</div>

	<div class="col-md-6">
		<div class="form-group has-feedback {{ form.lastName.vars.errors|length > 0 ? 'has-error' : '' }}">
			{{ form_widget(form.lastName) }}
			<div class="form-control-feedback">
