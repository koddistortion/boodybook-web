<div class="row">
	<div class="col-md-6">
		<div class="form-group has-feedback {{ form.email.first.vars.errors|length > 0 ? 'has-error' : '' }}">
			{{ form_widget(form.email.first) }}
			<div class="form-control-feedback">
				<i class="icon-mention text-muted"></i>
			</div>
			{% for error in form.email.first.vars.errors %}
				<span class="help-block">{{ error.message }}</span>
			{% endfor %}
		</div>
	</div>

	<div class="col-md-6">
		<div class="form-group has-feedback {{ form.email.second.vars.errors|length > 0 ? 'has-error' : '' }}">
			{{ form_widget(form.email.second) }}
			<div class="form-control-feedback">
				<i class="icon-mention text-muted"></i>
			</div>
			{% for error in form.email.second.vars.errors %}
