<div class="text-right">
	<a href="{{ path('fos_user_security_login') }}" class="btn btn-link"><i class="icon-arrow-left13 position-left"></i> {{ 'bb_platform.views.security.register.backToLogin'|trans }}</a>
	<button type="submit" class="btn bg-primary btn-labeled btn-labeled-right ml-10"><b><i class="icon-plus3"></i></b> {{ 'bb_platform.views.security.register.createAccount'|trans }}</button>
</div>
{{ form_end(form) }}