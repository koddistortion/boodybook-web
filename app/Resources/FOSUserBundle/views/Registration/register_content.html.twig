	</div>

	<div class="col-md-6">
		<div class="form-group has-feedback {{ form.plainPassword.second.vars.errors|length > 0 ? 'has-error' : '' }}">
			{{ form_widget(form.plainPassword.second) }}
			<div class="form-control-feedback">
